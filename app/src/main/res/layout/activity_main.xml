<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/currInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="当前播放："
        android:textColor="#000000" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:secondaryProgressTint="@color/colorAccent" />

    <TextView
        android:id="@+id/currTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignContent="stretch"
                app:alignItems="stretch"
                app:flexWrap="wrap">

                <Button
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放" />

                <Button
                    android:id="@+id/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂停" />

                <Button
                    android:id="@+id/resum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="继续" />

                <Button
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停止" />

                <Button
                    android:id="@+id/pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一首" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一首" />


                <Button
                    android:id="@+id/currSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放歌曲" />

                <Button
                    android:id="@+id/currSongId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放歌曲ID" />


                <Button
                    android:id="@+id/currSongIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放下标" />

                <Button
                    android:id="@+id/sendFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知栏喜欢" />

                <Button
                    android:id="@+id/sendLyrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知栏歌词" />

                <Button
                    android:id="@+id/cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取缓存大小" />

                <Button
                    android:id="@+id/shuffleMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随机播放" />

                <Button
                    android:id="@+id/isShuffleMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前是否随机" />

                <Button
                    android:id="@+id/playMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置播放模式" />

                <Button
                    android:id="@+id/currPlayMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放模式" />

                <Button
                    android:id="@+id/hasNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有下一首" />

                <Button
                    android:id="@+id/hasPre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有上一首" />

                <Button
                    android:id="@+id/fastForward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播速度加" />

                <Button
                    android:id="@+id/rewind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播速度减" />

                <Button
                    android:id="@+id/playSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放的速度" />

                <Button
                    android:id="@+id/addvolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量加" />

                <Button
                    android:id="@+id/jianvolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音量减" />

                <Button
                    android:id="@+id/getVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取音量" />

                <Button
                    android:id="@+id/localSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描本地媒体信息" />

            </com.google.android.flexbox.FlexboxLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>